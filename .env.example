# Smart Traffic Detection System - Environment Variables
# Copy this file to .env and fill in your values

# MongoDB (leave empty to use local Docker MongoDB)
MONGODB_URI=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# Email Configuration
# Option 1: SendGrid API (Recommended for production - bypasses SMTP blocks)
# Get free API key: https://sendgrid.com (15,000 emails/month with GitHub Student Pack)
SENDGRID_API_KEY=

# Option 2: SMTP (For local development only - blocked on most cloud providers)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
